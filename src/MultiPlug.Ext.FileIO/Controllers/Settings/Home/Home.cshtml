@model MultiPlug.Base.Http.EdgeApp

<section class="row-fluid">

    <div class="row-fluid">
        <div class="box">
            <div class="span2">
                <a style="line-height: 52px;" href="/"><img alt="Files Logo" src="@Raw(Model.Context.Paths.Assets)images/files.png"></a>
            </div>
            <div class="span8">
                <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">Files</p>
            </div>
            <div class="span2" style="text-align: right;">
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span6">
            <div class="box non-collapsible">
                <div class="row-fluid">
                    <div class="span10"><h4>Readers</h4></div>
                    <div class="span2"><a class="btn btn-green" href="@Raw(Model.Context.Paths.Home)reader/path/"><i class="icon-plus"></i></a></div>
                </div>

                <div class="row-fluid">
                    <div class="span10">
                        <p>Path</p>
                    </div>
                    <div class="span1">
                    </div>
                    <div class="span1">
                    </div>
                </div>

                @foreach (var Reader in @Model.Extension.Model.FileReaders)
                {
                <div class="row-fluid">
                    <div class="span9">
                        <a href="@Raw(Model.Context.Paths.Home)reader/?id=@Reader.Settings.Guid">@Reader.Settings.FilePath</a>
                    </div>
                    <div class="span3">
                        <div class="btn-group">
                            <a class="btn btn-blue" href="@Raw(Model.Context.Paths.Home)reader/?id=@Reader.Settings.Guid"><i class="icon-edit"></i></a>
                            <a class="btn btn-red" href="@Raw(Model.Context.Paths.Home)reader/delete/?id=@Reader.Settings.Guid"><i class="icon-trash"></i></a>
                        </div>
                    </div>
                </div>
                }

            </div>
        </div>
        <div class="span6">

            <div class="box non-collapsible">
                <div class="row-fluid">
                    <div class="span10"><h4>Writers</h4></div>
                    <div class="span2"><a class="btn btn-green" href="@Raw(Model.Context.Paths.Home)writer/path/"><i class="icon-plus"></i></a></div>
                </div>

                <div class="row-fluid">
                    <div class="span11">
                        <p>Path</p>
                    </div>
                    <div class="span1">
                    </div>
                </div>

                @foreach (var Writer in @Model.Extension.Model.FileWriters)
                {
                <div class="row-fluid">
                    <div class="span9">
                        <a href="@Raw(Model.Context.Paths.Home)writer/?id=@Writer.Settings.Guid">@Writer.Settings.FilePath</a>
                    </div>
                    <div class="span3">
                        <div class="btn-group">
                            <a class="btn btn-blue" href="@Raw(Model.Context.Paths.Home)writer/?id=@Writer.Settings.Guid"><i class="icon-edit"></i></a>
                            <a class="btn btn-red" href="@Raw(Model.Context.Paths.Home)writer/delete/?id=@Writer.Settings.Guid"><i class="icon-trash"></i></a>
                        </div>
                    </div>
                </div>
                }

            </div>

        </div>
    </div>
</section>

