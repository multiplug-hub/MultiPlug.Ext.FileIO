@model MultiPlug.Base.Http.EdgeApp

<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <section class="row-fluid">

        <div class="row-fluid">
            <div class="box">
                <div class="span5">
                    <a href="/"><img alt="File Logo" src="@Raw(Model.Context.Paths.Assets)images/file.png"></a>
                </div>
                <div class="span2">
                    <p style="font-size:22.75px; padding-top:10px;">File Writer</p>
                </div>
                <div class="span3">
                    <a href="@Raw(Model.Context.Paths.Home)">Back</a>
                </div>
                <div class="span2">
                    <button id="" type="submit" value="submit" style="height:40px; width:100%" class="item btn btn-green">Save Changes</button>
                </div>
            </div>
        </div>

        <input type="hidden" name="[@Model.Extension.Model.Guid][guid][]" value="@Model.Extension.Model.Guid">

