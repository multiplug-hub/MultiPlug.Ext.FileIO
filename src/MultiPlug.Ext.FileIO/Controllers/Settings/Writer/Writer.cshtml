                            </div>
                        </div>
                    </div>
                    <div class="span2">
                        <div class="row-fluid"><div class="span12">Group Select Key</div></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <input name="[@Model.Extension.Model.Guid][groupselectkey][]" class="input-block-level" type="text" placeholder="Key Select" value="@Model.Extension.Model.GroupSelectKey">
                            </div>
                        </div>
                    </div>

                    <div class="span2">
                        <div class="row-fluid"><div class="span12">WriteLine</div></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <input type="checkbox" name="[@Model.Extension.Model.Guid][writeline][]" value="true" @Model.Extension.Model.WriteLineEnabled>
                            </div>
                        </div>
                    </div>
